{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "md-editor",
    "mainBinaryName": "md-editor",
    "version": "../package.json",
    "identifier": "com.md-editor.dev",
    "build": {
        "beforeBuildCommand": "npm run sveltekit:build",
        "beforeDevCommand": "npm run sveltekit:dev",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../build"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "main",
                "title": "md-editor",
                "width": 1024,
                "height": 768,
                "minWidth": 600,
                "minHeight": 400,
                "resizable": true,
                "fullscreen": false,
                "decorations": false,
                "shadow": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "category": "Utility",
        "targets": [
            "dmg",
            "nsis",
            "appimage"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "createUpdaterArtifacts": "v1Compatible"
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM2MzgwNTQ1MTNFMkNDMDcKUldRSHpPSVRSUVU0eHIyWkh1Y0hiaXB0VU1Fb0RkdjRMSmdDK09SZFdhWHpobG1lVTlxOUxmTjkK",
            "endpoints": [
                "https://github.com/kbh1301/md-editor/releases/latest/download/latest.json"
            ],
            "windows": {
                "installMode": "basicUi"
            }
        }
    }
}