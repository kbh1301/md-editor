		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/typography": "^0.5.13",
		"@tauri-apps/cli": "^1.6.0",
		"autoprefixer": "^10.4.19",
		"postcss": "^8.4.38",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tailwindcss": "^3.4.4",
