{
	"name": "md-editor",
	"version": "0.1.6",
	"private": true,
	"scripts": {
		"dev": "npm run tauri dev",
		"shadcn:add": "npx shadcn-svelte@latest add",
		"build": "npm run tauri build",
		"preview": "vite preview",
